ETCD_ARGS="--name {{ ansible_hostname }} \
  --initial-advertise-peer-urls https://{{ ansible_host }}:2380 \
  --listen-peer-urls https://{{ ansible_host }}:2380 \
  --listen-client-urls https://{{ ansible_host }}:2379,https://127.0.0.1:2379 \
  --advertise-client-urls https://{{ ansible_host }}:2379 \
  --initial-cluster-token etcd-cluster-1 \
  --initial-cluster {% for host in groups['etcd'] %}{{ host }}=https://{{ hostvars[host].ansible_host }}:2380{{ "," if not loop.last else "" }}{% endfor %} \
  --initial-cluster-state new \
  --client-cert-auth \
  --trusted-ca-file=/opt/etcd/tls/ca.crt \
  --cert-file=/opt/etcd/tls/client.crt --key-file=/opt/etcd/tls/client.key \
  --peer-client-cert-auth --peer-trusted-ca-file=/opt/etcd/tls/ca.crt \
  --peer-cert-file=/opt/etcd/tls/peer.crt --peer-key-file=/opt/etcd/tls/peer.key"
