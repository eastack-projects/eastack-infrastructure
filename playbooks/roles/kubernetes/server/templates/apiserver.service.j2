[Service]
Environment="KUBE_API_ARGS=--advertise-address={{ ansible_host }} --allow-privileged=true --authorization-mode=Node,RBAC --client-ca-file=/opt/kubernetes/tls/ca.crt --enable-admission-plugins=NodeRestriction --enable-bootstrap-token-auth=true --etcd-cafile=/opt/etcd/tls/ca.crt --etcd-certfile=/opt/kubernetes/tls/apiserver-etcd-client.crt --etcd-keyfile=/opt/kubernetes/tls/apiserver-etcd-client.key --etcd-servers={% for host in groups['etcd'] %}https://{{ hostvars[host].ansible_host }}:2379{{ "," if not loop.last else "" }}{% endfor %} --insecure-port=0 --kubelet-client-certificate=/opt/kubernetes/tls/apiserver-kubelet-client.crt --kubelet-client-key=/opt/kubernetes/tls/apiserver-kubelet-client.key --kubelet-preferred-address-types=InternalIP,ExternalIP,Hostname --proxy-client-cert-file=/opt/kubernetes/tls/front-proxy-client.crt --proxy-client-key-file=/opt/kubernetes/tls/front-proxy-client.key --requestheader-allowed-names=front-proxy-client --requestheader-client-ca-file=/opt/kubernetes/tls/front-proxy-ca.crt --requestheader-extra-headers-prefix=X-Remote-Extra- --requestheader-group-headers=X-Remote-Group --requestheader-username-headers=X-Remote-User --secure-port=6443 --service-account-key-file=/opt/kubernetes/tls/sa.pub --service-account-issuer=https://oblp.me --api-audiences=https://oblp.me --service-account-signing-key-file=/opt/kubernetes/tls/sa.key --service-cluster-ip-range=10.96.0.0/12 --tls-cert-file={{ K8S_SERVER_PKI_DIR }}/{{ KUBE_APISERVER_CERT_NAME }} --tls-private-key-file={{ K8S_SERVER_PKI_DIR }}/{{ KUBE_APISERVER_KEY_NAME }}"
ExecStart=
ExecStart=/usr/bin/kube-apiserver $KUBE_API_ARGS
