apiVersion: v1
clusters:
- cluster:
    certificate-authority: {{ KUBERNETES_PKI_DIR }}/{{ KUBERNETES_CA_CERT_NAME }}
    server: https://{{ ansible_host }}:{{ SERVER_PORT }}
  name: kubernetes
contexts:
- context:
    cluster: kubernetes
    user: system:kube-controller-manager
  name: system:kube-controller-manager@kubernetes
current-context: system:kube-controller-manager@kubernetes
kind: Config
preferences: {}
users:
- name: system:kube-controller-manager
  user:
    client-certificate: {{ KUBERNETES_PKI_DIR }}/{{ CONTROLLER_MANAGER_APISERVER_CLIENT_CERT_NAME }}
    client-key: {{ KUBERNETES_PKI_DIR }}/{{ CONTROLLER_MANAGER_APISERVER_CLIENT_KEY_NAME }}
