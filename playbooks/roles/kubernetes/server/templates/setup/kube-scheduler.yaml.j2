apiVersion: v1
kind: Pod
metadata:
  labels:
    component: kube-scheduler
    tier: control-plane
  name: kube-scheduler
  namespace: kube-system
spec:
  containers:
    - command:
        - kube-scheduler
        - --authentication-kubeconfig={{ kubernetes_config_directory }}/scheduler.conf
        - --authorization-kubeconfig={{ kubernetes_config_directory }}/scheduler.conf
        - --bind-address=127.0.0.1
        - --kubeconfig={{ kubernetes_config_directory }}/scheduler.conf
        - --leader-elect=true
        - --port=0
      image: registry.aliyuncs.com/google_containers/kube-scheduler:v1.21.0
      imagePullPolicy: IfNotPresent
      livenessProbe:
        failureThreshold: 8
        httpGet:
          host: 127.0.0.1
          path: /healthz
          port: 10259
          scheme: HTTPS
        initialDelaySeconds: 10
        periodSeconds: 10
        timeoutSeconds: 15
      name: kube-scheduler
      resources:
        requests:
          cpu: 100m
      startupProbe:
        failureThreshold: 24
        httpGet:
          host: 127.0.0.1
          path: /healthz
          port: 10259
          scheme: HTTPS
        initialDelaySeconds: 10
        periodSeconds: 10
        timeoutSeconds: 15
      volumeMounts:
        - mountPath: {{ kubernetes_config_directory }}/scheduler.conf
          name: kubeconfig
          readOnly: true
  hostNetwork: true
  priorityClassName: system-node-critical
  volumes:
    - hostPath:
        path: {{ kubernetes_config_directory }}/scheduler.conf
        type: FileOrCreate
      name: kubeconfig