apiVersion: v1
kind: Config
current-context: system:kube-controller-manager@kubernetes
contexts:
- context:
    cluster: kubernetes
    user: system:kube-controller-manager
  name: system:kube-controller-manager@kubernetes
clusters:
- cluster:
    certificate-authority: {{ kubernetes_pki_directory }}/{{ kubernetes_ca_certificate }}
    server: https://{{ ansible_host }}:{{ server_port }}
  name: kubernetes
users:
- name: system:kube-controller-manager
  user:
    client-certificate: {{ kubernetes_pki_directory }}/{{ controller_manager_apiserver_client_certificate }}
    client-key: {{ kubernetes_pki_directory }}/{{ controller_manager_apiserver_client_key }}